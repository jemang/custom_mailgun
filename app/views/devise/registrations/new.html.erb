
<div class="wrap-login100">
  <div class="login100-pic js-tilt">
    <img src="/images/img-01.png" alt="IMG">
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <span class="login100-form-title">
      <h4> Sign Up </h4>
    </span>

    <div class="wrap-input100 validate-input">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input100", placeholder: "Email" %>
    </div>

    <div class="wrap-input100 validate-input">
      <%= f.password_field :password, autocomplete: "off", class: "input100", placeholder: "Password" %>
    </div>

    <div class="wrap-input100 validate-input">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "input100", placeholder: "Password Confirmation" %>
      <% if @minimum_password_length %>
        <p style="text-align: center;">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %><br />
    </div>

    <div class="container-login100-form-btn">
      <%= f.submit "Sign Up", class: "login100-form-btn" %>
    </div>

    <div class="text-center p-t-12">
      <%= render "devise/shared/links" %>
    </div>

    <div class="text-center p-t-136"> </div>
  <% end %>
</div>
